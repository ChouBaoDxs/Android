<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leftmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/leftmenu_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="@drawable/bg_shouhuoxinxi"
            android:layout_marginBottom="20dp">
        </LinearLayout>

        <Button
            android:id="@+id/iwantlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/theme_color"
            android:text="我要登录"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/iwantregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/theme_color"
            android:text="我要注册"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/userInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/theme_color"
            android:text="个人信息"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/exitlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/theme_color"
            android:text="退出登录"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@drawable/bg_shouhuoxinxi">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftmenu_pack_up"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="#50666666"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>
